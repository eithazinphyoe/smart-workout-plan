  </head>
  <body>
<% include ../../partialA/header %>

<div class="container-fluid">
  <div class="row">
 <% include ../../partialA/sidebar %>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-3"></div>
        <div class="col-sm-12 col-md-12 col-lg-6 border border-1 p-3 rounded border-primary mt-5"
        >
        <div class="form-signin w-100 m-auto">
          <h1 class="h3 mb-3 fw-normal">Challenge Update</h1>
          <form action="/admin/challengeupdate" method="post" enctype="multipart/form-data">
            <input type="hidden" name="id" value="<%= challenge._id %>"/>
            <div class="form-floating my-2">
              <input type="text" class="form-control" id="title" placeholder="Title" name="title" value="<%= challenge.title %>">
              <label for="title">Title</label>
            </div>
            <div class="form-floating my-2">
              <input type="number" class="form-control" id="day" placeholder="Day" name="day" min="1" max="100" value="<%= challenge.day %>" readonly>
              <label for="day">Day</label>
            </div>
            <div class="form-floating my-2">
                <input type="file" class="form-control" id="video" placeholder="video" name="video" accept="video/*">
                <label for="video">video</label>
              </div>
            
            <div class="form-floating my-2">
              <textarea class="form-control" id="description" placeholder="description"  name="description" style="height: 100px;"><%= challenge.description %></textarea>
              <label for="description">Description</label>
            </div>
            <div class="d-grid">
              <input type="button" onclick="checkVal()" class="btn btn-primary" value="submit"/>
            </div>
          </form>
        </div>
      </div>
        <div class="col-sm-12 col-md-12 col-lg-3"></div>
      </div>
       
      
     
    </main>
  </div>
</div>


   </body>
   <script src="/javascripts/jquery-3.7.0.min.js"></script>
   <script>
    function checkVal(){
      if(
        $("#title").val()==""||
        $("#day").val()==""||
        $("#description").val()==""||
        $("#day").val() <1
      ){
        alert("Please fill all fields and check day");
      }else{
        var data={
          day:$("#day").val(),
          workoutId:$("#workoutId").val(),
        }
        $.ajax("/admin/Checkchallenge",{
          type:"POST",
          data:data,
          success:function (result){
            console.log(result);
            if(result.status){
              $("form").submit();
            }else{
              alert("Day is duplicated");
              $("#day").val(),focus();
            }
          },
        
      });
      }
    }
  </script>
</html>
